<% if (username_signed_in?) %><% userid = current_username.id %>
  <% if Visitor.exists? %>
    <% if Visitor.find_by(idregvis: userid) %>
      <div class="container">
        <h1>Профиль пользователя</h1>
        <% if Visitor.find_by(idregvis: userid).photo.url(:thumb) %>
          <%= image_tag Visitor.find_by(idregvis: userid).photo.url(:thumb), class: "photoprofile" %>
        <% end %>
        <hr>
        <h4><%= Visitor.find_by(idregvis: userid).surname %> <%= Visitor.find_by(idregvis: userid).name %> (<%= Visitor.find_by(idregvis: userid).telephone %>)</h4>
        <hr>
        <p><strong>Пол: </strong><%= Visitor.find_by(idregvis: userid).sex %></p>
        <hr>
        <p><strong>Email: </strong><%= current_username.email %></p>
        <hr>
        <p><strong>Id пользователя: </strong><%= current_username.id %></p>
        <hr>
        <p><strong>Зарегистрирован: </strong><% regdata = current_username.created_at %><%= regdata.time.strftime("%d-%m-%Y") %></p>
        <hr>
        <% if Visitor.find_by(idregvis: userid).birthdate %>
          <% birthdate = Visitor.find_by(idregvis: userid).birthdate %>
          <% birthdate.time.strftime("%d-%m-%Y") %>
          <p><strong>Возраст: </strong><% timed=Time.now.strftime("%d-%m-%Y") %><% age = Time.diff(Time.now, birthdate) %><%= age[:year] %> лет</p>
          <hr>
        <% end %>
        <% if Visitor.find_by(idregvis: userid).country %>
          <p><strong>Страна: </strong><%= Visitor.find_by(idregvis: userid).country %></p>
          <hr>
        <% end %>
        <% if Visitor.find_by(idregvis: userid).city %>
          <p><strong>Город: </strong><%= Visitor.find_by(idregvis: userid).city %></p>
          <hr>
        <% end %>
        <% editid = Visitor.find_by(idregvis: userid).id %>
        <p><%= link_to 'Редактировать', edit_visitor_path(id: editid) %></p>
      </div>
    <% else %>
      <div class="container">
        <h1>Профиль пользователя</h1>
        <h3>Ваш профиль заполнен не полностью</h3>
        <a><%= image_tag "avatarka-no.png", alt: "Фото аватарки отсутствует", class: "noavatarka" %></a>
        <p>Фото аватарки отсутствует</p>
        <hr>
        <p><strong>Email: </strong><%= current_username.email %></p>
        <hr>
        <p><strong>Id пользователя: </strong><%= current_username.id %></p>
        <hr>
        <p><strong>Зарегистрирован: </strong>
        <% regdata = current_username.created_at %><%= regdata.time.strftime("%d-%m-%Y") %>
        <hr>
        <p><a href="/visitors/new">Добавить данные</a></p>
      </div>
    <% end %>
  <% end %>
<% end %>
