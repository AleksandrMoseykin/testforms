<% if (user_signed_in?) and !(username_signed_in?) %>
  <div class="div-line"><h1>Задания</h1> <a href="<%= new_topic_path %>"><i class="fa fa-plus-circle fa-2x" aria-hidden="true"></i></a> </div>
  <% if (user_signed_in?) %><% idreg1 = current_user.id %><% end %>
  <% if Topic.find_by(idreg: idreg1) %>
    <table class ="task-tabl">
      <tr class="gl-zag-tabl">
        <th>Название</th>
        <th>Вопросов</th>
        <th>Настройки</th>
        <th>Удалить</th>
      </tr>
      <% @topics.each do |topic| %>
        <% if topic.idreg == idreg1 %>
          <tr class="zag-tabl">
            <td><h4 class="div-line-small"><a href="/topics/<%= topic.id %>/questions"><%= topic.titletopic %></a><a href="/topics/<%= topic.id %>/questions/new"><i class="fa fa-plus-circle fa-1x" aria-hidden="true"></i></a></h4></td>
            <td><h4><%= topic.questions.count %></h4></td>
            <td><h4><a href="/topics/<%= topic.id %>"><i class="fa fa-cogs fa-1x" aria-hidden="true"></i></a></h4></td>
            <td><h4><a data-confirm="Удалить?" rel="nofollow" data-method="delete" href="/topics/<%= topic.id %>/"><i class="fa fa-trash-o" aria-hidden="true"></i></a></h4></td>
          </tr>
          <% unless Statisticscreator.find_by(idreg: idreg1) %>
            <% statistictest = [] %>
            <% statistictest[0] = topic.id %>
            <% Statisticscreator.create(test: statistictest, idreg: idreg1) %>
          <% else %>
            <% statistictest = Statisticscreator.find_by(idreg: idreg1).test %>
            <% unless statistictest.include?(topic.id) %>
              <% statistictest.push(topic.id) %>
              <% statistictest2 = statistictest.uniq %>
              <% stat = Statisticscreator.find_by(idreg: idreg1) %>
              <% stat.update(test: statistictest2) %>
            <% end %>
          <% end %>
          <% n = 0 %>
          <% topic.questions.each do |t| %>
            <tr class="questabl">
              <th><h5><%= t.titlequestion %></h5></th>
              <th><h5>№ <%= n=n+1 %></h5></th>
              <th><h5><a href="/topics/<%= t.topic_id %>/questions/<%= t.id %>/edit"><i class="fa fa-cog fa-1x" aria-hidden="true"></i></a></h5></th>
              <th><h5><a data-confirm="Удалить?" rel="nofollow" data-method="delete" href="/topics/<%= t.topic_id %>/questions/<%= t.id %>"><i class="fa fa-trash" aria-hidden="true"></i></a></h5></th>
            </tr>
            <tr class="questabl">
              <th>Правильный ответ</th>
              <th>Вариант ответа 1</th>
              <th>Вариант ответа 2</th>
              <th>Вариант ответа 3</th>
            </tr>
            <tr class="questabl answer">
              <td><%= t.answertrue %></td>
              <td><%= t.answer2 %></td>
              <td><%= t.answer3 %></td>
              <td><%= t.answer4 %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </table>
  <% end %>
<% end %>

<% userencrypted = User.find_by(id: idreg1).encrypted_password %>
<% all_test_array = ["all_test_tesk", "all_test_tesk_activ", "all_test_tesk_stop"] %>

<% all_test_array.each do |all_test_array| %>
  <% if $all_task_creat %>
    <% if $all_task_creat.get userencrypted + all_test_array %>
      <% $all_task_creat.del userencrypted + all_test_array %>
    <% end %>
  <% end %>
<% end %>
