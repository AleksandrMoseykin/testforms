<% if (user_signed_in?) %><% userid = current_user.id %>
  <% if Creator.exists? %>
    <% if Creator.find_by(idreg: userid) %>
      <h2><%= Creator.find_by(idreg: userid).namecreator %>, вы уже добавили данные</h2>
      <p>Для просмотра информации нажмите вкладку "Профиль".</p>
    <% else %>
      <h1>Добавить личные данные</h1>
      <%= form_with scope: :creator, html: { multipart:  true }, url: creators_path, local: true do |form| %>
        <p><%= form.label :"Аватарка" %><br><%= form.file_field :photocreator %></p>
        <p><%= form.label :"Имя" %><br><%= form.text_field :namecreator %></p>
        <p><%= form.label :"Фамилия" %><br><%= form.text_field :surnamecreator %></p>
        <p><%= form.label :"Телефон" %><br><%= form.text_field :telephonecreator %></p>
        <p><%= form.label :"Компания" %><br><%= form.text_field :companycreator %></p>
        <p><%= form.label :"Промокод" %><br><%= form.text_field :promocodecreator %></p>
        <input type="hidden" name="creator[idreg]" id="creator_idreg" value="<% if (user_signed_in?) %><%= current_user.id %><% end %>">
        <p><%= form.submit "Сохранить" %></p>
      <% end %>
    <% end %>
  <% end %>
<% end %>
